{
    "name": "tangerine-state-editor",
    "displayName": "Tangerine state editor",
    "description": "View and edit the state of tangerine apps",
    "version": "0.0.1",
    "publisher": "Atlassian",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:state-tree-view",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "tangerine.createAction",
                "title": "Tangerine: Create an action"
            },
            {
                "command": "tangerine.jumpTo",
                "title": "Tangerine: Jump to closest named item"
            },
            {
                "command": "tangerine.search",
                "title": "Tangerine: Search for items",
                "icon": {
                    "light": "assets/filter.svg",
                    "dark": "assets/filter.svg"
                }
            },
            {
                "command": "tangerine.clearFilter",
                "title": "Tangerine: Clear filtering mode and revert to app state view",
                "icon": {
                    "light": "assets/clear-filter.svg",
                    "dark": "assets/clear-filter.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "state-tree-explorer",
                    "title": "Tangerine State Editor",
                    "icon": "assets/icon.svg"
                }
            ]
        },
        "views": {
            "state-tree-explorer": [
                {
                    "id": "state-tree-view",
                    "name": "Tangerine State"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "tangerine.search",
                    "when": "view == state-tree-view",
                    "group": "navigation"
                },
                {
                    "command": "tangerine.clearFilter",
                    "when": "view == state-tree-view && tangerine-state-filtering == true",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/walk": "^2.3.0",
        "fuse.js": "^3.3.0",
        "walk": "^2.3.14"
    }
}
